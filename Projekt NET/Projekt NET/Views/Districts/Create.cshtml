@model Projekt_NET.Models.District

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>District</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Coordinate 1</label>
                <input asp-for="BoundingPoints[0].Latitude" class="form-control" placeholder="Latitude 1" />
                <input asp-for="BoundingPoints[0].Longitude" class="form-control" placeholder="Longitude 1" />
            </div>
            <div class="form-group">
                <label>Coordinate 2</label>
                <input asp-for="BoundingPoints[1].Latitude" class="form-control" placeholder="Latitude 2" />
                <input asp-for="BoundingPoints[1].Longitude" class="form-control" placeholder="Longitude 2" />
            </div>
            <div class="form-group">
                <label>Coordinate 3</label>
                <input asp-for="BoundingPoints[2].Latitude" class="form-control" placeholder="Latitude 3" />
                <input asp-for="BoundingPoints[2].Longitude" class="form-control" placeholder="Longitude 3" />
            </div>
            <div class="form-group">
                <label>Coordinate 4</label>
                <input asp-for="BoundingPoints[3].Latitude" class="form-control" placeholder="Latitude 4" />
                <input asp-for="BoundingPoints[3].Longitude" class="form-control" placeholder="Longitude 4" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

