@model Projekt_NET.Models.District

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>District</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Bounding Points
        </dt>
        <dd class="col-sm-10">
            <ul>
                <li>Lat: @Model.BoundingPoints[0].Latitude, Long: @Model.BoundingPoints[0].Longitude</li>
                <li>Lat: @Model.BoundingPoints[1].Latitude, Long: @Model.BoundingPoints[1].Longitude</li>
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DistrictId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
