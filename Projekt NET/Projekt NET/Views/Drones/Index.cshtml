@model IEnumerable<Projekt_NET.Models.Drone>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CallSign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordinate.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordinate.Longitude)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DroneCloud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AqDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CallSign)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinate.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinate.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Range)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DroneCloud.DroneCloudId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AqDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DroneId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DroneId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DroneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
