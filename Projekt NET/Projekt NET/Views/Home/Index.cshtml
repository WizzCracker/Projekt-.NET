@{
    ViewData["Title"] = "Home Page";
}

<div style="position: absolute; top: 15px; right: 20px;">
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Home" asp-action="Logout" method="post" style="display:inline;">
            <button type="submit" class="btn btn-outline-danger">Wyloguj</button>
        </form>
    }
    else
    {
        <a asp-controller="Home" asp-action="Login" class="btn btn-outline-primary">
            Logowanie
        </a>
    }
</div>

<div class="text-center">
    <h1 class="display-4">Drone swarm delivery</h1>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-controller="Home" asp-action="CRUD" class="btn btn-primary">
            Przejdź do listy CRUD.
        </a>
    </p>
}

<p>
    <a asp-controller="Home" asp-action="Map" class="btn btn-primary">
        Przejdź do mapy
    </a>
</p>

<p>
    <a asp-controller="Home" asp-action="MapWeather" class="btn btn-primary">
        Przejdź do mapy z pogodą
    </a>
</p>

<p>
    <a asp-controller="Paczki" asp-action="Dodaj" class="btn btn-primary">
        Zamów paczkę
    </a>
</p>