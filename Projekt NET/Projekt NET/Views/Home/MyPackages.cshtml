@model IEnumerable<Projekt_NET.Models.Package>

@{
    ViewData["Title"] = "Moje Paczki";
}

<h2>Moje Paczki</h2>

<table class="table">
    <thead>
        <tr>
            <th>Pickup Address</th>
            <th>Target Address</th>
            <th>Waga</th>
            <th>Dron</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PickupAddress</td>
                <td>@item.TargetAddress</td>
                <td>@item.Weight</td>
                <td>@(item.Drone != null ? item.Drone.CallSign : "Nieprzypisany")</td>
                <td>
                <td>
                    <a asp-controller="Packages" asp-action="Details" asp-route-id="@item.PackageId">Szczegóły</a> |
                    <a asp-controller="Packages" asp-action="DownloadPdf" asp-route-id="@item.PackageId">Pobierz PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
