@model Projekt_NET.Models.Package

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Package</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Drone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Drone.CallSign)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TargetAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TargetAddress)
        </dd>
        <dt>Ikona identyfikacyjna</dt>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div>
                <img src="@Model.ImagePath" alt="Zdjęcie paczki" style="max-width:300px;" />
            </div>
        }
        else
        {
            <p>Brak zdjęcia</p>
        }

        <p><strong>Cena:</strong> @Model.Price?.ToString("0.00") zł</p>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PackageId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
